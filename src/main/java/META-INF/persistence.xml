<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

      <class>com.ss.UtopiaAirlines.entity.Airplane</class>
      <class>com.ss.UtopiaAirlines.entity.AirplaneType</class>
      <class>com.ss.UtopiaAirlines.entity.Airport</class>
      <class>com.ss.UtopiaAirlines.entity.Booking</class>
      <class>com.ss.UtopiaAirlines.entity.BookingAgent</class>
      <class>com.ss.UtopiaAirlines.entity.BookingGuest</class>
      <class>com.ss.UtopiaAirlines.entity.BookingPayment</class>
      <class>com.ss.UtopiaAirlines.entity.BookingUser</class>
      <class>com.ss.UtopiaAirlines.entity.Flight</class>
      <class>com.ss.UtopiaAirlines.entity.FlightBookings</class>
      <class>com.ss.UtopiaAirlines.entity.Passenger</class>
      <class>com.ss.UtopiaAirlines.entity.Route</class>
      <class>com.ss.UtopiaAirlines.entity.User</class>
      <class>com.ss.UtopiaAirlines.entity.UserRole</class>
      <properties>
          <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/utopia"/>
          <property name="hibernate.connection.driver_class" value="com.mysql.cj.jdbc.Driver"/>
      </properties>
  </persistence-unit>
</persistence>
